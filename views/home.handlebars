<form>
  <fieldset>
    <legend>Add data to table</legend>
    <input type="text" name="name" id="name">
    <input type="number" name="reps" id="reps">
    <input type="number" name="weight" id="weight">
    <input type="date" name="date" id="date">
    <input type="checkbox" name="lbs" id="lbs">
    <input type="submit" id="dataSubmit">
  </fieldset>
</form>

<fieldset>
  <legend>Exercise Data</legend>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>Unit</th>
      </tr>
    </thead>
    <tbody>
      </tr>
      {{#each data}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.reps}}</td>
        <td>{{this.weight}}</td>
        <td>{{this.date}}</td>
        <td>{{this.unit}}</td>
        <td>
          <form action="/update" method="GET">
            <input type="hidden" name="id" value="{{this.id}}">
            <button>Update</button>
          </form>
        </td>
        <td>
          <form action="/delete" method="GET">
            <input type="hidden" name="id" value="{{this.id}}">
            <button>Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
</table>
</fieldset>
